= membership.member.email
- unless membership.member == @team.owner
  - if can? :destroy, membership
    = link_to 'Remove user from team', 
      delete_team_membership_path(membership, team_id: @team.id),
      method: :delete,
      data: { confirm: "Are you sure?" }

  - if can? :grant_ownership, @team 
    = link_to 'Transfer ownership to this user', 
      grant_ownership_team_path(@team, user_id: membership.member.id),
      method: :post,
      data: { confirm: "Are you sure?" }

